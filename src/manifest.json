{
	"name": "Harmony",
	"version": "1.2.0",
	"description": "Adds useful features to the Discord interface",
	"author": "Joe McGrath",
	"manifest_version": 2,
	"icons": {
		"16": "icon/icon16.png",
		"32": "icon/icon32.png",
		"48": "icon/icon48.png",
		"64": "icon/icon64.png",
		"128": "icon/icon128.png"
	},
	"browser_action": {
		"default_icon": "icon/icon32.png"
	},
	"content_scripts": [
		{
			"run_at": "document_start",
			"matches": ["https://discordapp.com/channels/*"],
			"css": [
				"features/characterCount.css",
				"features/fontSize.css",
				"features/responsiveChannels.css"
			],
			"js": [
				"features/loadOptions.js",
				"features/characterCount.js",
				"features/hideMembers.js",
				"features/responsiveChannels.js"
			]
		}
	],
	"options_ui": {
		"page": "options/options.html",
		"open_in_tab": false
	},
	"permissions": ["storage"]
}
